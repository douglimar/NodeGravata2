<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/imgTiePicture"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        app:srcCompat="@mipmap/logotipo" />

    <TextView
        android:id="@+id/tvTieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgTiePicture"
        android:layout_toEndOf="@+id/imgTiePicture"
        android:layout_toRightOf="@+id/imgTiePicture"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTieDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTieTitle"
        android:layout_toEndOf="@+id/imgTiePicture"
        android:layout_toRightOf="@+id/imgTiePicture"
        android:text="TextView" />

</RelativeLayout>